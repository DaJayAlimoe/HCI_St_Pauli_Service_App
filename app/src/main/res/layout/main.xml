<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_handler.Main">

    <TextView
        android:id="@+id/textView_main_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/qr_code"
        tools:context=".MainActivity"
        tools:text="QR Code Scanner in Bearbeitung" />

    <Button
        android:id="@+id/btn_main_to_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="@string/zur_kunden_uebersicht"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_main_to_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp"
        android:text="@string/zur_service_uebersicht"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_main_to_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="195dp"
        android:text="@string/zum_qr_scan" />

</RelativeLayout>




