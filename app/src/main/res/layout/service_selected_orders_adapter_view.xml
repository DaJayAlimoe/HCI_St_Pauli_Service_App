<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:id="@+id/textView_service_selected_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25.0"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView_service_selected_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25.0"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView_service_selected_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25.0"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_service_selected_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25.0"
        android:gravity="center"
        android:text="@string/service_selected_orders_button" />


</LinearLayout>