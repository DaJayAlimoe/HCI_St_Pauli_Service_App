<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linaerLayout_customer_itemView_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/list_view_border"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:padding="20dp"
    android:weightSum="100">


    <ImageView
        android:id="@+id/imgView_customer_picture_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:contentDescription="@string/image"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_customer_item_description_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textview2" />

        <TextView
            android:id="@+id/textView_customer_amount_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textview3" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_customer_status_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center"
        android:text="" />

</LinearLayout>